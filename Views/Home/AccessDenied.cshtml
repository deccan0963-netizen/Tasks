@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Access Denied</title>

    <style>
        body {
            background: #f2f4f8;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
        }

        .card {
            background: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0px 8px 18px rgba(0,0,0,0.1);
            text-align: center;
            width: 380px;
        }

        .card h2 {
            color: #d9534f;
            margin-bottom: 10px;
        }

        .card p {
            color: #555;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 18px;
            background: #0275d8;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        /* Modal style */
        .modal {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0,0,0,0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-box {
            background: white;
            padding: 25px 30px;
            border-radius: 10px;
            width: 320px;
            text-align: center;
        }

        .modal-box button {
            padding: 8px 14px;
            margin-top: 10px;
            background: #0275d8;
            border: none;
            color: white;
            border-radius: 5px;
        }
    </style>

</head>
<body>

    <div class="card">
        <h2>âš  Access Denied</h2>
        <p>You do not have permission to view this page.</p>
        <button class="btn" onclick="goHome()">Go to Dashboard</button>
    </div>

    <!-- Modal -->
    <div id="historyModal" class="modal">
        <div class="modal-box">
            <h3>Navigation Blocked</h3>
            <p>You cannot go back from this page.</p>
            <button onclick="closeModal()">OK</button>
        </div>
    </div>

    <script>
        // Prevent back button
        history.pushState(null, null, location.href);
        window.onpopstate = function () {
            showModal();
            history.pushState(null, null, location.href);
        };

        function showModal() {
            document.getElementById("historyModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("historyModal").style.display = "none";
        }

        function goHome() {
            window.location.href = "/ManageTasks/Index";
        }
    </script>

</body>
</html>
