<!-- WORK HISTORY MODAL (Styled Same as Project View Modal) -->
<div class="modal fade" id="workingProjectsModal" tabindex="-1" aria-hidden="true"
     style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <!-- HEADER -->
      <div class="modal-header" style="
          background: linear-gradient(135deg, #1e3c72, #2a5298);
          color: white; border-bottom: none; padding: 12px 16px;">
        <h5 class="modal-title">
          <i class="bi bi-clock-history"></i> Work History
          <span class="status-badge" id="v-status-badge"
                style="    font-weight: 600;
    padding: 2px 8px;
    border-radius: 12px;
    color: white;
    font-size: 0.75rem;
    display: inline-block;">
                           
            Active
          </span>
        </h5>
        <button type="button" class="btn-close-custom" data-bs-dismiss="modal"
                style="background:none;border:none;color:white;font-size:1.2rem;">âœ•</button>
      </div>

      <!-- BODY -->
      <div class="modal-body row" style="padding:16px;">

        <!-- LEFT SIDE -->
        <div class="col-md-6">
          <div class="card" style="
                border: 1px solid #e2e8f0;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.05);
                margin-bottom: 12px;">
            <div class="card-header" style="
                background: #f8fafc;
                padding: 8px 12px;
                font-weight: 600;
                color: #1e3c72;">
              <i class="bi bi-person-workspace"></i> Work Details
            </div>

            <div class="card-body" style="font-size: 0.9rem;">

              <div class="info-row" style="display:flex;margin-bottom:6px;">
                <div class="info-label" style="width:130px;font-weight:500;color:#475569;">WorkSegment</div>
                <div class="info-colon" style="width:20px;">:</div>
                <div class="info-value" id="history-project-name" style="flex:1;color:#0f172a;">Loading...</div>
              </div>

              <div class="info-row" style="display:flex;margin-bottom:6px;">
                <div class="info-label" style="width:130px;font-weight:500;color:#475569;">Department</div>
                <div class="info-colon" style="width:20px;">:</div>
                <div class="info-value" id="history-project-dept" style="flex:1;color:#0f172a;">Loading...</div>
              </div>
             

              <div class="info-row" style="display:flex;margin-bottom:6px;">
                <div class="info-label" style="width:130px;font-weight:500;color:#475569;">Start Date</div>
                <div class="info-colon" style="width:20px;">:</div>
                <div class="info-value" id="history-project-start" style="flex:1;color:#0f172a;">Loading...</div>
              </div>

              <div class="info-row" style="display:flex;margin-bottom:6px;">
                <div class="info-label" style="width:130px;font-weight:500;color:#475569;">Deadline</div>
                <div class="info-colon" style="width:20px;">:</div>
                <div class="info-value" id="history-project-deadline" style="flex:1;color:#0f172a;">Loading...</div>
              </div>

            </div>
          </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-md-6">
          <div class="card" style="
                border: 1px solid #e2e8f0;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
            <div class="card-header" style="
                background:#f8fafc;
                padding:8px 12px;
                font-weight:600;
                color:#1e3c72;">
              <i class="bi bi-hourglass-split"></i> Task Assignments
            </div>

            <div class="card-body" style="
                max-height: 300px;
                overflow-y: auto;
                padding: 12px;">

              <style>
                /* Webkit Scrollbar for Task Assignments */
                .card-body::-webkit-scrollbar {
                  width: 8px;
                }
                .card-body::-webkit-scrollbar-track {
                  background: #f1f5f9;
                  border-radius: 4px;
                }
                .card-body::-webkit-scrollbar-thumb {
                  background: #cbd5e1;
                  border-radius: 4px;
                }
                .card-body::-webkit-scrollbar-thumb:hover {
                  background: #94a3b8;
                }
                
                /* Webkit Scrollbar for Modal Body (if needed) */
                .modal-body::-webkit-scrollbar {
                  width: 10px;
                }
                .modal-body::-webkit-scrollbar-track {
                  background: #f8fafc;
                }
                .modal-body::-webkit-scrollbar-thumb {
                  background: #e2e8f0;
                  border-radius: 5px;
                }
                .modal-body::-webkit-scrollbar-thumb:hover {
                  background: #cbd5e1;
                }
              </style>

              <ul class="list-group" id="history-task-list" style="border:none;">
                <li class="list-group-item no-tasks" style="
                    border:none;
                    text-align:center;
                    color:#94a3b8;
                    font-style:italic;">
                  Loading tasks...
                </li>
              </ul>

            </div>
          </div>
        </div>

      </div> <!-- END BODY -->

    </div>
  </div>
</div>